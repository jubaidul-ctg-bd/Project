@model User
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Users", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-controller="Users" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="user_name" class="control-label">Username</label>
                    <input asp-for="user_name" class="form-control" />
                    <span asp-validation-for="user_name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="password" class="control-label">Password</label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="type" class="control-label">User Type</label>
                    <select asp-for="type" class="form-control">
                        <option value="Student">Student</option>
                        <option value="Teacher">Teacher</option>
                        <option value="Admin">Admin</option>
                    </select>

                </div>

                <div>
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>

            </form>
        </div>
    </div>
}

@if (ViewBag.msg != null)
{
    <lebel>@ViewBag.msg</lebel>
}
